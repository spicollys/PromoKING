<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/opcaoProduto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="2dp"
    android:background="@color/amarelo_pastel_background"
    android:padding="0dp">

    <View
        android:id="@+id/listPopupAnchor"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/produtoTipo"
        android:layout_width="237dp"
        android:layout_height="34dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/imagemProduto"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Tipo Produto" />

    <TextView
        android:id="@+id/produtoMarca"
        android:layout_width="98dp"
        android:layout_height="29dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:text="Marca"
        android:textColor="#090909"
        android:textColorLink="#00FFFFFF"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/imagemProduto"
        app:layout_constraintTop_toBottomOf="@+id/produtoTipo" />

    <TextView
        android:id="@+id/dinheiroReal"
        android:layout_width="22dp"
        android:layout_height="30dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="4dp"
        android:text="Preço"
        android:textColor="#090909"
        android:textColorLink="#00FFFFFF"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/imagemProduto"
        app:layout_constraintTop_toBottomOf="@+id/produtoTipo"
        tools:text="@string/dinheiro_real" />

    <TextView
        android:id="@+id/produtoPreco2"
        android:layout_width="78dp"
        android:layout_height="30dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="4dp"
        android:text="Preço"
        android:textColor="#090909"
        android:textColorLink="#00FFFFFF"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/imagemProduto"
        app:layout_constraintTop_toBottomOf="@+id/produtoTipo" />

    <TextView
        android:id="@+id/produtoUn"
        android:layout_width="33dp"
        android:layout_height="29dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="4dp"
        android:text="Un"
        android:textColor="#090909"
        android:textColorLink="#00FFFFFF"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/imagemProduto"
        app:layout_constraintTop_toBottomOf="@+id/produtoTipo" />

    <ImageView
        android:id="@+id/imagemProduto"
        android:layout_width="73dp"
        android:layout_height="85dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/produtoTipo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_photo_strong_red_24dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="31dp"
        android:layout_height="70dp"
        android:layout_marginStart="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/produtoTipo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.533"
        app:srcCompat="@drawable/ic_edit_black_24dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="37dp"
        android:layout_height="71dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/listPopupAnchor"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_delete_black_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>